{{ section | json }}
{%- for block in section.blocks -%}
  {%- if block.type == 'link' -%}
    <p class="bg-green-200">Label: {{ block.settings.linktext }}</p>
    <p class="bg-green-200">URL: {{ block.settings.linkurl }}</p>
  {%- endif -%}
{%- endfor -%}

{% schema %}
{
  "name": "call to action",
  "class": "call-to-action",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "id": "linkurl",
          "type": "url",
          "label": "URL link"
        },
        {
          "id": "linktext",
          "type": "text",
          "label": "Link text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "call to action",
      "blocks": [
        {
          "type": "link"
        }
      ]
    }
  ]
}
{% endschema %}
