{{ 'component-account-sidebar.css' | asset_url | stylesheet_tag }}

<div class="account--sidebar">
  <ul class="sidebar-top links-wrapper">
    <li class="list--item {% if active == 'order' %}active{% endif %}">
      <a href="/account"
        ><span>{%- render 'icon-cart' -%}</span>Orders</a
      >
    </li>
    <li class="list--item {% if active == 'address' %}active{% endif %}">
      <a href="/account/addresses"
        ><span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
            <!--!Font Awesome Pro 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2024 Fonticons, Inc.--><path d="M0 96C0 60.7 28.7 32 64 32H384c35.3 0 64 28.7 64 64V416c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V96zM96 288a32 32 0 1 0 0-64 32 32 0 1 0 0 64zm32-128a32 32 0 1 0 -64 0 32 32 0 1 0 64 0zM96 384a32 32 0 1 0 0-64 32 32 0 1 0 0 64zm96-248c-13.3 0-24 10.7-24 24s10.7 24 24 24H352c13.3 0 24-10.7 24-24s-10.7-24-24-24H192zm0 96c-13.3 0-24 10.7-24 24s10.7 24 24 24H352c13.3 0 24-10.7 24-24s-10.7-24-24-24H192zm0 96c-13.3 0-24 10.7-24 24s10.7 24 24 24H352c13.3 0 24-10.7 24-24s-10.7-24-24-24H192z"/>
          </svg></span
        >Gegevens</a
      >
    </li>
    <li class="list--item {% if active == 'links' %}active{% endif %}">
      <a href="/account/addresses">Handige Links</a>
    </li>
  </ul>
  <ul class="sidebar-bottom links-wrapper">
    {% comment %} <h1 class="customer__title">{{ 'customer.account.title' | t }}</h1> {% endcomment %}
    <li class="list--item">
      <a href="{{ routes.account_logout_url }}">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
          focusable="false"
          fill="none"
          viewBox="0 0 18 19"
        >
          <path fill-rule="evenodd" clip-rule="evenodd" d="M6 4.5a3 3 0 116 0 3 3 0 01-6 0zm3-4a4 4 0 100 8 4 4 0 000-8zm5.58 12.15c1.12.82 1.83 2.24 1.91 4.85H1.51c.08-2.6.79-4.03 1.9-4.85C4.66 11.75 6.5 11.5 9 11.5s4.35.26 5.58 1.15zM9 10.5c-2.5 0-4.65.24-6.17 1.35C1.27 12.98.5 14.93.5 18v.5h17V18c0-3.07-.77-5.02-2.33-6.15-1.52-1.1-3.67-1.35-6.17-1.35z" fill="currentColor">
        </svg>
        {{ 'customer.log_out' | t }}
      </a>
    </li>
  </ul>
</div>
